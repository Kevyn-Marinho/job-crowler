{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "dist",
        "allowJs": true,
        "lib": [ "es6"],
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noEmitOnError": true,
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "./src/**/*"
    ]
}